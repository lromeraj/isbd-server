{
  "name": "isbd-server",
  "version": "0.3.9",
  "description": "A test server for Iridium SBD Direct IP",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js -l4",
    "build": "rimraf build/ && tsc",
    "build:docker": "docker compose build",
    "env": "ENV_DIR=./ node build/scripts/gen-env.js",
    "env:docker": "USER=$(id -u) ENV_DIR=$(pwd) docker compose -f docker-compose.env.yml run --rm isbd-env"
  },
  "author": "@lromeraj",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^10.0.1",
    "crypto-random-string": "^3.3.1",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.0",
    "isbd-emu": "file:modules/isbd-emu",
    "node-localstorage": "^2.2.1",
    "node-telegram-bot-api": "^0.61.0",
    "nodemon": "^2.0.21",
    "tele-bot": "file:modules/tele-bot",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "typescript": "^4.9.4",
		"@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.17",
    "@types/node-localstorage": "^1.3.0",
    "@types/node-telegram-bot-api": "^0.61.3",
    "rimraf": "^5.0.5"
  }
}
